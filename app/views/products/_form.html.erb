<%= form_with model: product, data: {turbo: false} do |f| %>

  <div class="col-3">
      <%= f.label :name, 'Nome', class: "form-label"%>
      <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mt-3">
      <%= f.submit 'Adicionar Produto', class: 'btn btn-success' %>
  </div>
<% end %>